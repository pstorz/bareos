#!/bin/bash
#shellcheck source=../environment.in
#. ./environment
set -e

. "${rscripts}/functions"

print_debug "drop database \"${db_name}\" (${DBTYPE})"
"${scripts}/drop_bareos_database" "${DBTYPE}"  || echo "info: ${scripts}/drop_bareos_database failed"

print_debug "creating database \"${db_name}\" (${DBTYPE})"
"${scripts}/create_bareos_database" "${DBTYPE}"

print_debug "making tables  \"${db_name}\" (${DBTYPE})"
"${scripts}/make_bareos_tables" "${DBTYPE}"

print_debug "granting privileges database \"${db_name}\" (${DBTYPE})"
"${scripts}/grant_bareos_privileges" "${DBTYPE}"  || echo "info: ${scripts}/drop_bareos_database failed"

if lsof="$(command -v lsof)"; then
  for port in $BASEPORT $BAREOS_DIRECTOR_PORT $BAREOS_STORAGE_PORT \
    $BAREOS_STORAGE2_PORT $BAREOS_FD_PORT $MINIO_PORT; do
    if pid=$("${lsof}" -ti "tcp:$port"); then
      print_debug "Killing process listening on $port with PID $pid"
      kill -9 "$pid"
    fi
  done
fi
exit 0
